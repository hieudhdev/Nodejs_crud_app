<!-- CREATE NEW USER -->
<div>
  <a type="button" class="btn btn-secondary btnNewUser" method="GET" href="/">
    <i class="fa-solid fa-angles-left"></i>
      All User
  </a>
</div>

<div class="formCreateUser">
  <div class="titleNewUser">New User</div>
  <div class="description">
    <small id="emailHelp" class="form-text text-muted descNewUser">Use the below form to create new user</small>
  </div>

  <form action="http://localhost:3000/api/user/create" method="POST" onsubmit="add_user_done()">
    <div class="form-group">
      <!-- attributes for, name -->
      <label for="name">Name</label>  
      <input name="name" type="text" class="form-control" id="" placeholder="Enter your name" value="">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email" value="">
    </div>

    <div>
      <div class="form-check-inline">
        <label for="gender" class="form-check-label">Gender:</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male">
        <label class="form-check-label" for="inlineRadio1">Male</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
        <label class="form-check-label" for="inlineRadio2">Female</label>
      </div>
    </div>

    <div>
      <div class="form-check-inline">
        <label for="status" class="form-check-label">Status:</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="status" id="inlineRadio3" value="Active">
        <label class="form-check-label" for="inlineRadio3">Active</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="status" id="inlineRadio4" value="Inactive">
        <label class="form-check-label" for="inlineRadio4">Inactive</label>
      </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block btnSave">Save</button>
  </form>
</div>

<!-- END CREATE NEW USER -->

